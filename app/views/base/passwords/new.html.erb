<%= content_for :page_title, t(".heading") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: 'shared/error_summary', locals: { errors: @response.errors } %>

    <h1 class="govuk-heading-xl">
      <%= t('.heading') %>
    </h1>

    <p class="govuk-body-l">
      <%= t('.lead') %>
    </p>

    <%= form_with model: @response, url: base_users_password_path,  html: { novalidate: true }, local: true, method: :post do |f| %>
      <%= govuk_input(
        :email,
        form: f,
        label: {
          text: t('.email'),
          classes: 'govuk-label--m'
        },
        hint: {
          text: t('.email_hint_html')
        },
        classes: 'govuk-!-width-three-quarters',
        field_type: :email,
      ) %>

      <%= govuk_button(t('common.send_reset_email'), form: f) %>
    <% end %>
  </div>
</div>
